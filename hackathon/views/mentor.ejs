    <style>
        /* General Styles */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: #f0f2f5;
            color: #333;
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 260px;
            background: linear-gradient(180deg, #2a3f54, #1c2833);
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 30px 10px;
            min-height: 100vh;
            position: sticky;
            top: 0;
        }

        .sidebar h2 {
            margin-bottom: 40px;
            font-size: 1.8rem;
            letter-spacing: 1px;
        }

        .sidebar ul {
            list-style: none;
            width: 100%;
        }

        .sidebar ul li {
            width: 100%;
            margin-bottom: 20px;
        }

        .sidebar ul li a {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 20px;
            color: #f5f5f5;
            background-color: rgba(255, 255, 255, 0.05);
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .sidebar ul li a:hover {
            background-color: rgba(255, 255, 255, 0.15);
            transform: translateX(5px);
        }

        .sidebar ul li a i {
            font-size: 1.2rem;
        }

        /* Content Styles */
        .content {
            flex: 1;
            padding: 40px;
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        /* Mentorship Page Specific Styles */
        .header {
            background: linear-gradient(90deg, #8A2BE2, #4169E1);
            color: white;
            padding: 30px 40px;
            border-radius: 15px;
            margin-bottom: 30px;
        }

        .header h1 {
            font-size: 2.2rem;
            margin-bottom: 10px;
        }

        /* New Grid Layout for Cards */
        .card-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .mentorship-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        .mentorship-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: #20C997;
        }

        .domain-image {
            width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 10px;
            margin-bottom: 15px;
        }

        .mentor-info {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            color: #666;
        }

        .duration {
            display: inline-block;
            background: rgba(32, 201, 151, 0.1);
            color: #20C997;
            font-size: 0.9rem;
            padding: 5px 15px;
            border-radius: 20px;
            margin-bottom: 15px;
        }

        .mentorship-card p {
            margin-bottom: 20px;
        }

        .request-btn {
            background: #20C997;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: 500;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s ease;
            margin-top: auto;
        }

        .request-btn:hover {
            background: #1bae85;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        /* Upcoming Domains Section */
        .upcoming-section h2 {
            font-size: 1.8rem;
            margin-bottom: 20px;
            color: #333;
        }

        .domains-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .domain-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            flex: 1;
            min-width: 300px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
        }

        .domain-icon {
            width: 50px;
            height: 50px;
            background: #f0f2f5;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
        }

        .domain-icon i {
            font-size: 1.5rem;
            color: #20C997;
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            body {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
                height: auto;
                flex-direction: row;
                justify-content: space-around;
                position: static;
                padding: 20px 0;
            }

            .sidebar ul {
                display: flex;
                flex-wrap: wrap;
                justify-content: center;
                gap: 10px;
            }

            .card-container {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>

