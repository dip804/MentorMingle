<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Open Source</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

  <!-- Font Awesome for Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <style>
    /* General Styles */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: #f0f2f5;
      color: #333;
      display: flex;
      min-height: 100vh;
    }

    /* Sidebar Styles */
    .sidebar {
      width: 260px;
      background: linear-gradient(180deg, #2a3f54, #1c2833);
      color: white;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 30px 10px;
      position: sticky;
      top: 0;
      height: 100vh;
    }

    .sidebar h2 {
      margin-bottom: 40px;
      font-size: 1.8rem;
      letter-spacing: 1px;
      text-align: center;
    }

    .sidebar ul {
      list-style: none;
      width: 100%;
    }

    .sidebar ul li {
      width: 100%;
      margin-bottom: 15px;
    }

    .sidebar ul li a {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 12px 20px;
      color: #f5f5f5;
      background-color: rgba(255, 255, 255, 0.05);
      border-radius: 8px;
      transition: all 0.3s ease;
      text-decoration: none;
    }

    .sidebar ul li a:hover {
      background-color: rgba(255, 255, 255, 0.15);
      transform: translateX(5px);
    }

    .sidebar ul li a i {
      font-size: 1.2rem;
    }

    /* Content Styles */
    .main-content {
      flex: 1;
      padding: 40px;
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    /* Header Styles */
    .header {
      background: linear-gradient(90deg, #8A2BE2, #4169E1);
      color: white;
      padding: 30px 40px;
      border-radius: 15px;
      margin-bottom: 30px;
    }

    .header h1 {
      font-size: 2.2rem;
      margin-bottom: 10px;
    }

    .header p {
      font-size: 1rem;
    }

    /* Projects Grid */
    .projects-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 25px;
    }

    .project-card {
      background: white;
      border-radius: 15px;
      padding: 25px;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.05);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .project-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 20px rgba(0, 0, 0, 0.1);
    }

    .project-header {
      display: flex;
      align-items: center;
      gap: 15px;
      margin-bottom: 20px;
    }

    .project-icon {
      width: 50px;
      height: 50px;
      background: #f0f2f5;
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
      color: #20C997;
    }

    .project-title {
      font-size: 1.3rem;
      font-weight: 600;
    }

    .project-category {
      font-size: 0.9rem;
      color: #888;
    }

    .project-description {
      color: #666;
      margin-bottom: 20px;
      line-height: 1.6;
      font-size: 0.95rem;
    }

    .project-actions {
      display: flex;
    }

    .project-btn {
      flex: 1;
      background: #20C997;
      color: white;
      border: none;
      padding: 10px 15px;
      border-radius: 5px;
      font-weight: 500;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 8px;
      justify-content: center;
      transition: all 0.3s ease;
      text-decoration: none;
      font-size: 0.95rem;
    }

    .project-btn:hover {
      background: #1bae85;
      transform: translateY(-2px);
    }

    /* Responsive sidebar */
    @media (max-width: 900px) {
      body {
        flex-direction: column;
      }

      .sidebar {
        width: 100%;
        height: auto;
        flex-direction: row;
        justify-content: space-around;
        position: relative;
        padding: 15px;
      }

      .sidebar ul {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
      }

      .sidebar ul li {
        margin: 10px;
      }

      .sidebar h2 {
        display: none;
      }
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <aside class="sidebar">
    <h2>Dashboard</h2>
    <ul>
        <li><a href="#"><i class="fa-solid fa-house"></i> Home</a></li>
        <li><a href="/alumni"><i class="fa-solid fa-users"></i> Batches</a></li>
        <li><a href="/view-events"><i class="fa-solid fa-calendar-days"></i> Events</a></li>
        <li><a href="/view-job"><i class="fa-solid fa-briefcase"></i> Jobs</a></li>
        <li><a href="#Fourms"><i class="fa-solid fa-chart-line"></i> Forums</a></li>
        <li><a href="/mentor"><i class="fa-solid fa-user-tie"></i> Mentorship</a></li>
        <li><a href="/opensource"><i class="fa-solid fa-code-branch"></i> Open Source</a></li>
        <li><a href="/donation"><i class="fa-solid fa-hand-holding-heart"></i> Donations</a></li>
        <li><a href="logout.html"><i class="fa-solid fa-right-from-bracket"></i> Logout</a></li>
    </ul>
</aside>

  <!-- Main Content -->
  <main class="main-content">
    <header class="header">
      <h1>Open Source Projects</h1>
      <p>Contribute to real-world projects and enhance your skills</p>
    </header>

    <div class="projects-grid" id="projects-container">
      <!-- Dynamic Content Loaded Here -->
    </div>
  </main>

  <script>
    const projects = [
      { name: "React", category: "JavaScript", icon: "fab fa-react", link: "https://github.com/facebook/react" },
      { name: "Kubernetes", category: "DevOps", icon: "fab fa-docker", link: "https://github.com/kubernetes/kubernetes" },
      { name: "VS Code", category: "Development", icon: "fas fa-code", link: "https://github.com/microsoft/vscode" },
      { name: "TensorFlow", category: "Machine Learning", icon: "fab fa-python", link: "https://github.com/tensorflow/tensorflow" },
      { name: "Django", category: "Web Framework", icon: "fab fa-python", link: "https://github.com/django/django" },
      { name: "Flutter", category: "Mobile Development", icon: "fab fa-android", link: "https://github.com/flutter/flutter" },
      { name: "Node.js", category: "Backend", icon: "fab fa-node-js", link: "https://github.com/nodejs/node" },
      { name: "Bootstrap", category: "CSS Framework", icon: "fab fa-bootstrap", link: "https://github.com/twbs/bootstrap" },
      { name: "Angular", category: "JavaScript Framework", icon: "fab fa-angular", link: "https://github.com/angular/angular" },
      { name: "Laravel", category: "PHP Framework", icon: "fab fa-laravel", link: "https://github.com/laravel/laravel" },
      { name: "Rust", category: "Systems Programming", icon: "fas fa-terminal", link: "https://github.com/rust-lang/rust" },
    ];

    const projectsContainer = document.getElementById('projects-container');

    projects.forEach(project => {
      projectsContainer.innerHTML += `
        <div class='project-card'>
          <div class='project-header'>
            <div class='project-icon'><i class='${project.icon}'></i></div>
            <div>
              <div class='project-title'>${project.name}</div>
              <div class='project-category'>${project.category}</div>
            </div>
          </div>
          <div class='project-description'>Explore and contribute to the ${project.name} project in ${project.category}.</div>
          <div class='project-actions'>
            <a href='${project.link}' class='project-btn' target='_blank'><i class="fab fa-github"></i> GitHub</a>
          </div>
        </div>
      `;
    });
  </script>

</body>
</html>