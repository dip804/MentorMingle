<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Events</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-6">

    <h2 class="text-3xl font-bold mb-4 text-center">Available Events</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% events.forEach(event => { %>
            <div class="bg-white shadow-lg rounded-lg p-6 relative">
                <!-- Ribbon -->
                <div class="absolute top-0 right-0 bg-purple-600 text-white text-xs px-3 py-1 rounded-bl-lg">HACKATHON</div>

                <!-- Title -->
                <h3 class="text-xl font-bold text-gray-800"><%= event.title %></h3>

                <!-- Date & Time -->
                <div class="flex items-center text-gray-600 text-sm mt-2">
                    <span class="mr-2">üìÖ <%= event.date %></span>
                    <span class="ml-4">‚è∞ <%= event.time %></span>
                </div>

                <!-- Location -->
                <div class="text-gray-600 text-sm mt-2">üìç <%= event.location %></div>

                <!-- Description -->3
                <p class="text-gray-700 text-sm mt-4"><%= event.description %></p>

                <!-- Seats -->
                <div class="flex items-center text-gray-600 text-sm mt-4">
                    <span class="mr-2">üë• <%= event.seats %> seats remaining</span>
                </div>

                <!-- Enroll Button -->
                <div class="mt-4">
                    <a href="/event/enroll/<%= event.id %>" class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 transition duration-300">Enroll Now</a>
                </div>
            </div>
        <% }); %>
    </div>

    <div class="mt-6 text-center">
        <a href="/admin/dashboard" class="text-blue-600 hover:underline">Back to Dashboard</a>
    </div>

</body>
</html>
