            }
        
            .hero p {
                font-size: 18px;
            }
        
            .step:not(:last-child):after {
                display: none;
            }
        
            .steps {
                gap: 30px;
            }
        }
        
        @media (max-width: 768px) {
            section {
                padding: 60px 0;
            }
        
