            background-color: white;
            color: var(--secondary);
        }
        
        .cta .btn:hover {
            background-color: var(--light);
        }
        
        /* Footer */
        footer {
            background-color: var(--dark);
            color: white;
            padding: 60px 0 20px;
        }
        
